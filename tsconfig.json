{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2022",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts",
  ],
  "lib": [
    "esnext",
    "node"
  ]
}